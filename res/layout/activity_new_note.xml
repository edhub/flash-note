<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/tv_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/line_space"
        android:text="@string/press_to_record" />

    <EditText
        android:id="@+id/et_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/line_space"
        android:ems="10"
        android:hint="@string/description" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/sb_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/line_space"
        android:max="100" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/line_space"
        android:padding="5dp" >

        <TextView
            android:id="@+id/tv_prio_low"
            style="@style/PrioButton"
            android:layout_gravity="left"
            android:clickable="true"
            android:onClick="onPrioClicked"
            android:text="@string/prio_low" />

        <TextView
            android:id="@+id/tv_prio_normal"
            style="@style/PrioButton"
            android:layout_gravity="center_horizontal"
            android:background="@color/prio_selected"
            android:clickable="true"
            android:onClick="onPrioClicked"
            android:text="@string/prio_normal" />

        <TextView
            android:id="@+id/tv_prio_high"
            style="@style/PrioButton"
            android:layout_gravity="right"
            android:clickable="true"
            android:onClick="onPrioClicked"
            android:text="@string/prio_high" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="cancelEdit"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:onClick="saveNote"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>